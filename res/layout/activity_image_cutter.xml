<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <com.dd.meiying.wiget.cropimage.CropImageLayout
        android:id="@+id/image_cutter_clip"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffffffff" />

    <RelativeLayout
        android:id="@+id/cutter_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_88"
        android:alpha="1" >

        <TextView
            android:id="@+id/image_cutter_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px_28"
            android:padding="@dimen/px_10"
            android:text="上一步"
            android:textColor="@color/white"
            android:textSize="@dimen/px_text_28" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="@dimen/px_10"
            android:text="裁切图片"
            android:textColor="@color/white"
            android:textSize="@dimen/px_text_32" />

        <TextView
            android:id="@+id/image_cutter_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/px_28"
            android:padding="@dimen/px_10"
            android:text="下一步"
            android:textColor="@color/white"
            android:textSize="@dimen/px_text_28" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/cutter_rate"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_40"
        android:layout_above="@+id/cutter_bottom_rotate"
        android:layout_centerHorizontal="true"
        android:paddingLeft="@dimen/px_30"
        android:paddingRight="@dimen/px_30"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_rate_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1:1"
            android:layout_weight="1.0"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/px_text_24" />
        <TextView
             android:id="@+id/tv_rate_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2:3"
            android:layout_weight="1.0"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/px_text_24" />
        <TextView
             android:id="@+id/tv_rate_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3:4"
            android:layout_weight="1.0"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/px_text_24" />
        <TextView
             android:id="@+id/tv_rate_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9:16"
            android:layout_weight="1.0"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/px_text_24" />
         <TextView
              android:id="@+id/tv_rate_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="16:9"
            android:layout_weight="1.0"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/px_text_24" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cutter_bottom_rotate"
        android:layout_width="@dimen/px_80"
        android:layout_height="@dimen/px_120"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/image_cutter_rotate"
            android:layout_width="@dimen/px_44"
            android:layout_height="@dimen/px_44"
            android:src="@drawable/selector_photo_revolve" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_12"
            android:text="旋转"
            android:textColor="@color/white"
            android:textSize="@dimen/px_text_24" />
    </LinearLayout>

</RelativeLayout>