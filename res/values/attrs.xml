<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <declare-styleable name="RoundCornerImageView">
        <attr name="radius" format="dimension" />
        <attr name="cornerDirection">
            <flag name="leftTop" value="1" />
            <flag name="leftBottom" value="2" />
            <flag name="rightTop" value="4" />
            <flag name="rightBottom" value="8" />
        </attr>
    </declare-styleable>

    <attr name="direction">
        <enum name="rightToLeft" value="0" />
        <enum name="bottomToTop" value="1" />
        <enum name="leftToRight" value="2" />
        <enum name="topToBottom" value="3" />
    </attr>

    <declare-styleable name="MultiDirectionSlidingDrawer">
        <attr name="handle" format="reference" />
        <attr name="content" format="reference" />
        <attr name="direction" />
        <attr name="bottomOffset" format="dimension" />
        <attr name="topOffset" format="dimension" />
        <attr name="allowSingleTap" format="boolean" />
        <attr name="animateOnClick" format="boolean" />
    </declare-styleable>
    <declare-styleable name="PullToRefresh">
        <attr name="adapterViewBackground" format="reference|color" />
        <attr name="headerBackground" format="reference|color" />
        <attr name="headerTextColor" format="color" />
        <attr name="mode">
            <flag name="pullDownFromTop" value="0x1" />
            <flag name="pullUpFromBottom" value="0x2" />
            <flag name="both" value="0x3" />
            <flag name="none" value="0x4" />
        </attr>
    </declare-styleable>
    <declare-styleable name="com.meilapp.meila.searchProduct.Pager">
        <attr name="pageWidth" format="dimension" />
    </declare-styleable>

    <!--
    <declare-styleable name="com.myapps.widget.PagerBar">
        <attr name="barColor" format="color" />
        <attr name="highlightColor" format="color" />
        <attr name="fadeDelay" format="integer" />
        <attr name="fadeDuration" format="integer" />
        <attr name="roundRectRadius" format="dimension" />
    </declare-styleable>
    -->

    <declare-styleable name="CustomTextView">
        <attr name="CustomTextViewMaxLine" format="integer" />
        <attr name="CustomTextViewSingleLine" format="boolean" />
    </declare-styleable>
    <declare-styleable name="ForLoadingRectView">
        <attr name="progressColor" format="reference|color" />
    </declare-styleable>
    <declare-styleable name="VideoPlayerView">
        <attr name="controllBarHeight" format="dimension" />
        <attr name="isFullScreen" format="boolean" />
    </declare-styleable>
    <declare-styleable name="RoundSimpleImageView">
        <attr name="cornerRadius" format="dimension" />
    </declare-styleable>
    <declare-styleable name="HorizontalListView">
        <attr name="dividerWidth" format="dimension" />
        <attr name="android:clipToPadding" />
        <attr name="android:divider" />
        <attr name="android:requiresFadingEdge" />
        <attr name="android:fadingEdgeLength" />
    </declare-styleable>
    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>

</resources>